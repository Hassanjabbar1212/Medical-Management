<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
@model List<ItemViewModel>
<h2>Available Items</h2>
<table class="table" id="itemTable">
    <thead>
        <tr>
            <th>Name</th>
            <th>Quantity</th>
            <th>Mg</th>
            <th>SinglePrice</th>
            <th>BoxPrice</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr class="item-row" data-quantity="@item.Quantity">
                <td>@item.Name</td>
                <td>@item.Quantity</td>
                <td>@item.MgName</td>
                <td>@item.SinglePrice</td>
                <td>@item.BoxPrice</td>
                <td>
                    <a href="@Url.Action("EditItem", "Item", new { id = item.Id })">Edit</a>
                </td>
                <td>
                    <a href="@Url.Action("Delete", "Item", new { id = item.Id })">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
<script>
    $(document).ready(function () {
        // Loop through each row and check the quantity
        $('.item-row').each(function () {
            var quantity = $(this).data('quantity');

            if (quantity <= 2) {
                $(this).css('background-color', '#ffcccc');
            }
        });
    });
</script>
