@model Mg

@{
    ViewData["Title"] = "Add MG";
}

<h2>Add MG</h2>

<form asp-action="AddMG" asp-controller="Item" method="post">
    <div class="form-group">
        <label asp-for="MgName">MG Name:</label>
        <input asp-for="MgName" class="form-control" required />
        <span asp-validation-for="MgName" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Add MG</button>
</form>
